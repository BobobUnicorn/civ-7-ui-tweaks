<?xml version="1.0" encoding="utf-8"?>
<Mod id="bobobunicorn-ui-tweaks" version="2" xmlns="ModInfo">
	<Properties>
		<Name>UI Tweaks</Name>
		<Description>Fixes some miscellaneous UI issues, mainly focused around QOL.</Description>
		<Authors>BobobUnicorn</Authors>
		<Package>Mod</Package>
		<AffectsSavedGames>0</AffectsSavedGames>
	</Properties>
	<Dependencies>
		<Mod id="base-standard" title="LOC_MODULE_BASE_STANDARD_NAME" />
	</Dependencies>
	<ActionCriteria>
		<Criteria id="always">
			<AlwaysMet />
		</Criteria>
	</ActionCriteria>
	<ActionGroups>
		<ActionGroup id="textbox-focus" scope="shell" criteria="always">
			<Properties>
				<LoadOrder>100</LoadOrder>
			</Properties>
			<Actions>
				<UIScripts>
					<Item>modules/ui/textbox-focus.js</Item>
				</UIScripts>
			</Actions>
		</ActionGroup>
		<ActionGroup id="sub-system-dock" scope="game" criteria="always">
			<Properties>
				<LoadOrder>100</LoadOrder>
			</Properties>
			<Actions>
				<UIScripts>
					<Item>modules/ui/sub-system-dock.js</Item>
				</UIScripts>
			</Actions>
		</ActionGroup>
		<ActionGroup id="diplo-ribbon-neutral" scope="game" criteria="always">
			<Properties>
				<LoadOrder>101</LoadOrder>
			</Properties>
			<Actions>
				<UIScripts>
					<Item>modules/ui/diplo-ribbon-neutral.js</Item>
				</UIScripts>
			</Actions>
		</ActionGroup>
	</ActionGroups>
